<!DOCTYPE html>
<html>
  <head>
    <title>Deck</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
    
    <nav class="navbar navbar-light bg-light">
      <%=link_to "Deck Battle", root_url, :class => "navbar-brand" %>
      
      <% if logged_in? %>
      
        <form class="form-inline my-2 my-lg-0">
          Hello, <%= current_user.name %>!
          <%= link_to 'Log out', logout_path, method: :delete, :class => "btn btn-secondary"%>
        </form>
        
      <% else %>
      
        <form class="form-inline my-2 my-lg-0">
          <%= link_to "Sign up", new_user_path, :class => "btn btn-primary" %>
          <%= link_to "Log in", login_path, :class => "btn btn-secondary" %>
        </form>
        
      <% end %>
    </nav>
    
    <%= yield %>
  </body>
</html>
